<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView android:id="@+id/detailName" android:textSize="18sp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/detailDate"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/detailLocation"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>

    <Button android:id="@+id/btnRemove" android:text="@string/remove1"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
